<UserControl x:Class="UI.Views.Searchbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" /> 
            <ColumnDefinition Width="*" /> 
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Tour" VerticalAlignment="Center" Grid.Column="0" /> 
        <TextBox Name="txtSearchTour" VerticalAlignment="Center" Text="{Binding SearchTour, Mode=TwoWay}" Grid.Column="1" /> 
        <Button Command="{Binding SearchCommand}" Grid.Column="2">Search</Button>
        <ComboBox SelectedItem="{Binding SortAfter}" ItemsSource="{Binding TransportTypes, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Command="{Binding SortAsc}" Grid.Column="2">ASC</Button>
        <Button Command="{Binding SearchCommand}" Grid.Column="2">DESC</Button>
    </Grid>
</UserControl>
