<Window x:Class="UI.Views.AddTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Views" 
        xmlns:sys="http://schemas.microsoft.com/winfx/2009/xaml"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Add Tour" Height="300" Width="400"
        FocusManager.FocusedElement="{Binding ElementName=txtName}"
        DataContext="{Binding AddTourViewModel, Source={StaticResource IoCConfig2}}">
    <StackPanel>
        <!--NAME-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="137" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Margin="50,20,0,5" Grid.Row="0" Grid.Column="0" Content="Name"/>
            <TextBox Margin="0,20,50,5" Grid.Row="0" Grid.Column="1" Name="txtName" Text ="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <!--Description-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="137"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Margin="50,0,0,5" Grid.Row="0" Grid.Column="0" Content="Description"/>
            <TextBox Margin="0,0,50,5" Grid.Row="0" Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <!--From-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="137" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Margin="50,0,0,5" Grid.Row="0" Grid.Column="0" Content="From"/>
            <TextBox Margin="0,0,50,5" Grid.Row="0" Grid.Column="1" Text="{Binding From, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <!--To-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="137" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Margin="50,0,0,5" Grid.Row="0" Grid.Column="0" Content="To"/>
            <TextBox Margin="0,0,50,5" Grid.Row="0" Grid.Column="1" Text ="{Binding To, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <!--TransportType-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="137" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Margin="50,0,0,5" Grid.Row="0" Grid.Column="0" Content="TransportType"/>
            <ComboBox Margin="0,0,50,5" Grid.Row="0" Grid.Column="2" SelectedItem="{Binding TransportType}" ItemsSource="{Binding TransportTypes, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <!--Buttons gehören noch gestylt-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button Width="70" Margin="50,50,0,0" Grid.Row="0" Grid.Column="0" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsDefault="True" Command="{Binding CancelCommand}"/>
            <Button Width="70" Margin="40,50,50,0" Grid.Row="0" Grid.Column="1" Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsCancel="False" Command="{Binding SubmitCommand}"/>
        </Grid>
    </StackPanel>
</Window>
