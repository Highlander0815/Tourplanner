<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %-5level %logger - %message%newline" />
		</layout>
	</appender>

	<appender name="JsonAppender" type="log4net.Appender.RollingFileAppender">
		<file value="logs\log.json" />
		<appendToFile value="true" />
		<rollingStyle value="Size" />
		<maxSizeRollBackups value="10" />
		<maximumFileSize value="5MB" />
		<staticLogFileName value="true" />

		<layout type="log4net.Layout.JsonLayout">
			<removeAppenderWhitespace value="true" />
			<properties>
				<property name="timestamp" value="%date{yyyy-MM-ddTHH:mm:ss.fffZ}" />
				<property name="level" value="%level" />
				<property name="logger" value="%logger" />
				<property name="message" value="%message" />
			</properties>
		</layout>
	</appender>

	<root>
		<level value="DEBUG" />
		<appender-ref ref="ConsoleAppender" />
		<appender-ref ref="JsonAppender" />
	</root>
</log4net>
